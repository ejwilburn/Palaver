<!DOCTYPE html> 
<html> 
    <head> 
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title> 
        <meta name="viewport" content="width=device-width, initial-scale=1" />
		<link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
        <link rel="stylesheet" href="~/Content/jquery.mobile-1.4.5.min.css" />
        <link rel="stylesheet" href="~/Content/Site.Mobile.css" />
        <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
        <script type="text/javascript">
            $(document).bind("mobileinit", function() {
                // As of Beta 2, jQuery Mobile's Ajax navigation does not work in all cases (e.g.,
                // when navigating from a mobile to a non-mobile page), hence disabling it.
                $.mobile.ajaxEnabled = false;
            });
        </script>
        <script type="text/javascript" src="~/Scripts/jquery.mobile-1.4.5.min.js"></script>
        <script src="~/Scripts/Index.mobile.js" type="text/javascript"></script>
    </head> 
<body data-role="page" data-theme="a" id="threadPage"> 
    @Html.Partial("_ViewSwitcher")

    <div data-role="header">
        <h1>@ViewBag.Title</h1>
    </div>

    <div data-role="content">
        @RenderSection("featured", false)
        @RenderBody()
    </div>
</body>
</html>