@model List<Palaver2.Models.Comment>
@{
    ViewBag.Title = "Threads";
}

<ul data-role="listview" data-divider-theme="b" data-inset="false">
    <li data-theme="b" data-icon="plus" data-iconpos="right">
        <a data-transition="none" href="/NewThreadMobile">
        New Thread
        </a>
    </li>
@foreach (var thread in Model)
{
	@Html.Partial("_thread.mobile", (Comment)thread);
}
</ul>
