@{
    ViewBag.Title = "Palaver2";
}

@using Palaver2.Models;
@using System.Text.RegularExpressions;

<div id="contentDiv" class="container-fluid">
	<div class="row">
        <div class="col-md-3 sidebar">
			<div id="threadList" class="card">
			    <h3 class="card-header sticky-top">Threads</h3>
			    <div class="card-block scroll-y">
			        <form class="form-inline my-2 my-lg-0">
			          <input  id="newcomment" class="form-control w-75 mr-sm-2" type="text" placeholder="Thread Title">
			          <button class="btn btn-outline-success my-2 my-sm-0" type="submit" onclick="AddComment()">New</button>
			        </form>
			        <div id="threads">
		            	@Html.Partial("_topcomments", (IEnumerable<Comment>)ViewBag.threads)
			        </div>
			    </div>
			</div>
		</div>

        <div id="commentsArea" class="col-md-9 col-md-offset-3 content card">
		    <h3 class="card-header sticky-top">Comments</h3>
		    <div id="comments" class="card-block scroll-y"></div>
		</div>
	</div>
</div>
@Html.Hidden("userid", CodeFirstMembership.CodeFirstSecurity.CurrentUserId)

