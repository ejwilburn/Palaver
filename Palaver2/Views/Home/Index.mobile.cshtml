@using System.Web;
@using System.Web.Mvc;
@using System.Web.Mvc.Html;
@using Palaver2.Models;

@model List<Palaver2.Models.Comment>

@if(ViewBag.threadId == null) {
    @Html.Partial("_threads.mobile", (List<Comment>)ViewBag.threads);
} else {
    @Html.Partial("_comments.mobile", (List<Comment>)ViewBag.comments);
}

@Html.Hidden("userid", CodeFirstMembership.CodeFirstSecurity.CurrentUserId)
